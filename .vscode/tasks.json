{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "extract map",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "-m",
                "mapfile.extract_map"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": false
            }
        },
        {
            "label": "pack map",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "-m",
                "mapfile.pack"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": false
            }
        },
        {
            "label": "python unit tests",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "-m",
                "unittest",
                "discover",
                "test"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": false
            }
        },
        {
            "label": "start map",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "quick_start.py",
                "${file}"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            }
        },
        {
            "label": "translate",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "-m", "mapfile.translate", "${input:gameid}"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "close": false
            }
        },
        {
            "label": "round64",
            "type": "shell",
            "command": ["python3"],
            "args": [
                "-m", "scripts.round_64", "${input:value}"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "close": false
            }
        },
    ],
    "inputs": [
        {
            "id": "gameid",
            "description": "4-character game ID",
            "default": "ogru",
            "type": "promptString"
        },
        {
            "id": "value",
            "description": "a number",
            "default": "480",
            "type": "promptString"
        },
    ]
}